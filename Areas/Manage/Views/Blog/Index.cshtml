@using Laboris.Models
@model List<Blog>

@{
    var count = 0;
}

<style>
    .custom-container {
        padding-left: 180px;
        padding-top:100px;
    }


</style>

<div class="container custom-container">
    <table class="table custom-table">
        <a class="btn btn-primary my-3" asp-controller="Blog" asp-action="Create">Create</a>

        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Header</th>
                <th scope="col">Description</th>
                <th scope="col">Admin</th>
                <th scope="col">Date</th>
                <th scope="col">Category</th>
                <th scope="col">Photo</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                count++;
                <tr>
                    <th scope="row">@item.Id</th>
                    <td>@item.Header</td>
                    <td>@item.Description</td>
                    <td>@item.Admin</td>
                    <td>@item.Date</td>
                    <td>@item.Category.Name</td>

      

                    <td>
                        <img src="~/upload/blogs/@item.PhotoUrl" style="width:150px" />
                    </td>

                    <td >
                        <a class="btn btn-danger m-2" asp-controller="Blog" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        <a class="btn btn-secondary m-2" asp-controller="Blog" asp-action="Update" asp-route-id="@item.Id">Update</a>
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>
