@using Laboris.Areas.Manage.ViewModels.Blog
@model UpdateBlogVm
@using Laboris.Models



<div class=" container my-4 ms-auto">


    <form method="post" enctype="multipart/form-data" class=" p-5 m-5">

        <h1> Fill the blanks.</h1>

        <div class="mb-3">
            <label asp-for="Header" class="form-label">Header</label>
            <input asp-for="Header" class="form-control">
            <span asp-validation-for="Header" style="color:red"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label">Description</label>
            <input asp-for="Description" class="form-control">
            <span asp-validation-for="Description" style="color:red"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Admin" class="form-label">Admin</label>
            <input asp-for="Admin" class="form-control">
            <span asp-validation-for="Admin" style="color:red"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Date" class="form-label">Date( day/ month / year)</label>
            <input asp-for="Date" class="form-control">
            <span asp-validation-for="Date" style="color:red"></span>
        </div>


        <div class="mb-3">
            <label asp-for="ImgFile" class="form-label">Photo</label>
            <input asp-for="ImgFile" class="form-control">
            <span asp-validation-for="ImgFile" style="color:red"></span>
        </div>


        <div>

            <label asp-for="CategoryId" class="form-label">Categories</label>
            <select class="form-select m-3" asp-for="CategoryId" asp-items="new SelectList(ViewBag.Categories,nameof(BlogCategory.Id),nameof(BlogCategory.Name))">
                <option selected>Choose Category</option>

            </select>

        </div>


        <button type="submit" class="btn btn-primary">Submit</button>

        <button asp-controller="Blog" asp-action="Index" type="submit" class="btn btn-secondary">Back</button>

    </form>


</div>

