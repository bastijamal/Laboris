@using Laboris.Models
@model List<Customers>

@{
    var count = 0;
}

<style>
    .custom-container {
        padding-left: 180px;
        padding-top: 100px;
    }
</style>

<div class="container custom-container">
    <table class="table custom-table">
        <a class="btn btn-primary my-3" asp-action="Create">Create</a>

        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Position</th>
                <th scope="col">Comment</th>
                <th scope="col">Photo</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                count++;
                <tr>
                    <th scope="row">@item.Id</th>
                    <td>@item.Name</td>
                    <td>@item.Position</td>
                    <td>@item.Comment</td>

                    <td>
                        <img src="~/upload/customers/@item.PhotoUrl" style="width:150px" />
                    </td>

                    <td>
                        <a class="btn btn-danger m-2" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        <a class="btn btn-secondary m-2" asp-action="Update" asp-route-id="@item.Id">Update</a>
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>

