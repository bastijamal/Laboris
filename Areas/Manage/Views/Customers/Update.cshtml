@using Laboris.Models
@model Customers


<div class=" container my-4 ms-auto">


    <form method="post" enctype="multipart/form-data" class=" p-5 m-5">

        <h1> Fill the blanks.</h1>

        <div class="mb-3">
            <label asp-for="Name" class="form-label">Name</label>
            <input asp-for="Name" class="form-control">
            <span asp-validation-for="Name" style="color:red"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Comment" class="form-label">Comment</label>
            <input asp-for="Comment" class="form-control">
            <span asp-validation-for="Comment" style="color:red"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Position" class="form-label">Position</label>
            <input asp-for="Position" class="form-control">
            <span asp-validation-for="Position" style="color:red"></span>
        </div>


        <div class="mb-3">
            <label asp-for="ImgFile" class="form-label">Photo</label>
            <input asp-for="ImgFile" class="form-control">
            <span asp-validation-for="ImgFile" style="color:red"></span>
        </div>


        <button asp-controller="Customers" asp-action="Index" type="submit" class="btn btn-secondary">Back</button>
        <button type="submit" class="btn btn-success">Submit</button>

    </form>


</div>





