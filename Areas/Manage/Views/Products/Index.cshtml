@using Laboris.Models
@model List<Products>

@{
    var count = 0;
}

<style>
    .custom-container {
        padding-left: 150px;
        padding-top: 100px;
    }
</style>

<div class="container custom-container">
    <a class="btn btn-primary my-3" asp-controller="Products" asp-action="Create">Create</a>

    <table class="table custom-table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Price</th>
                <th scope="col">Old Price</th>
                <th scope="col">Color</th>
                <th scope="col">Size</th>
                <th scope="col">Category</th>
                <th scope="col">Tags</th>
                <th scope="col">Photo</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.Id</th>
                    <td>@item.Name</td>
                    <td>@item.Price</td>
                    <td>@item.OldPrice</td>
                    <td>@item.Color</td>
                    <td>@item.Size</td>
                    <td>@item.Category?.Name</td>
                    <td>
                        @foreach (var pt in item.ProductTags)
                        {
                            @pt.Name
                        }
                    </td>
                    <td>
                        <img src="~/upload/products/@item.PhotoUrl" style="width:150px" />
                    </td>
                    <td>
                        <a class="btn btn-danger m-2" asp-controller="Products" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        <a class="btn btn-secondary m-2" asp-controller="Products" asp-action="Update" asp-route-id="@item.Id">Update</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
